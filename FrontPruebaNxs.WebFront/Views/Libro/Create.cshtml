@model FrontPruebaNxs.WebFront.Models.Libro
@{
    string res = (string)(ViewData["error"]);
}

<h4>Libro</h4>
<hr />
<p>
    @{ if (res != null)
        {
            @Html.DisplayText(res);
            <input class="searchInput" readonly type="text" name="name" value='@res' />
            <label value="@res" />
        }
    }
</p>
<div class="row">
    
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nopaginas" class="control-label"></label>
                <input asp-for="Nopaginas" class="form-control" />
                <span asp-validation-for="Nopaginas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idautor" class="control-label"></label>
                <input asp-for="Idautor" class="form-control" />
                <span asp-validation-for="Idautor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

